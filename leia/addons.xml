   <addon id='script.tvpower.screensaver.control' name='TV power controller' version='1.1.0' provider-name='Beam'>
      <requires>
         <import addon='xbmc.python' version='2.19.0'/>
      </requires>
      <extension point='xbmc.python.script' library='program.py'/>
      <extension point='xbmc.service' library='service.py' start='login'/>
      <extension point='xbmc.addon.metadata'>
         <summary lang='en'>Turn off/on TV with screensaver</summary>
         <description lang='en'>Turn off/on TV with screensaver</description>
         <source>
            https://github.com/beam-kodi-addons-repository/script.tvpower.screensaver.control
         </source>
         <email>ondra@bimovi.cz</email>
      </extension>
   </addon>
   <addon id='service.subtitles.nextweek.cz' name='NextWeek.cz' version='1.4.1' provider-name='Beam'>
      <requires>
         <import addon='xbmc.python' version='2.14.0'/>
         <import addon='script.module.simplejson' version='2.0.10'/>
      </requires>
      <extension point='xbmc.subtitle.module' library='service.py'/>
      <extension point='xbmc.addon.metadata'>
         <summary>NextWeek.cz</summary>
         <description lang='en'>Search and download subtitles from nextweek.cz (Czech only)</description>
         <description lang='cs'>Vyhledavani a stahovani titulku z nextweek.cz</description>
