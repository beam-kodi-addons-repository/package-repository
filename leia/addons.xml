         <datadir zip='true'>https://xbmc-repo.bimovi.cz/leia/packages/</datadir>
      </extension>
      <extension point='xbmc.addon.metadata'>
         <summary>Beam Kodi Add-ons Repository (Leia)</summary>
         <description>Add-ons created by Andrew Beam</description>
         <platform>all</platform>
         <source>https://github.com/beam-kodi-addons-repository/repository.beam.xbmc-addons</source>
         <email>ondra@bimovi.cz</email>
      </extension>
