<?xml version='1.0' encoding='UTF-8' standalone='yes'?>
<addons>
   <addon id='repository.beam.xbmc-addons' name='Beam Kodi Add-ons (Leia)' version='1.1.0' provider-name='Beam'>
      <extension point='xbmc.addon.repository' name='Beam Kodi Add-ons Repository (Leia)'>
         <info compressed='false'>https://xbmc-repo.bimovi.cz/leia/addons.xml</info>
